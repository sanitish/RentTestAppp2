<?xml version="1.0" encoding="utf-8"?>
 <android.support.v7.widget.CardView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin=".1dp"
        android:background="#ffffff">
<RelativeLayout
    android:layout_width="match_parent"
    android:id="@+id/viewDetailsStudent"
    android:layout_height="wrap_content">
    <TextView
        android:layout_marginTop="15dp"
        android:text="Nitish Kumar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#000"
        android:layout_marginLeft="15dp"
        android:textSize="18sp"
        android:id="@+id/studentNameTextView" />
    <TextView
        android:text="98402"
        android:layout_below="@+id/studentNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:layout_marginLeft="15dp"
        android:id="@+id/studentPhoneNumber" />

    <Button
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:background="@drawable/ic_action_call"
        android:layout_marginRight="69dp"
        android:layout_marginEnd="69dp"
        android:id="@+id/callButton"
        android:layout_alignBaseline="@+id/studentPhoneNumber"
        android:layout_alignBottom="@+id/studentPhoneNumber"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/ic_action_name"
        android:id="@+id/button3"
        android:layout_alignBaseline="@+id/studentPhoneNumber"
        android:layout_alignBottom="@+id/studentPhoneNumber"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
</RelativeLayout>
    </android.support.v7.widget.CardView>